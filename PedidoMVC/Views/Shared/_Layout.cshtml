<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PedidoMVC</title>
    <!-- font -->
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <!-- materialize -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- materialize icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- local -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
</head>
<body>
    <header>
        <nav>
            <div class="container">
            <a asp-controller="Home" asp-action="Index" class="logo center"><span id="burguer"></span>Burgueria</a>
            <a asp-controller="Pedido" asp-action="Index" class="pedido btn right" >Pedido</a>
           
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb">
            @RenderBody()
        </main>
    </div>
    <!-- matealize -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
